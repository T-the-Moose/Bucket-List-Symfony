<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="icon" href="{{ asset('img/favicon.png') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Borel&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    </head>
    <body>

        <header>
            <div class="header">
                <div class="logo">
                    <img id="img" style="width: 3em; height: 3em" src="{{ asset('img/logo.svg') }}" alt="logo">
                </div>
                <div class="title">
                    <h1 id="titreH1">Bucket-List</h1>
                </div>
            </div>
            <div class="nav">
                {% block nav %}
                    <nav id="nav">
                        <a  href="{{ path('main.home.html.php') }}">Home</a>
                        <a  href="{{ path('liste') }}">All wishes</a>
                        <a  href="{{ path('idee') }}">Add yours !</a>
                        <a  href="{{ path('about_us') }}">About us</a>
                        {% if not app.user %}
                            <a href="{{ path('app_login') }}">Se connecter</a>
                            <a href="{{ path('app_register') }}">S'enregistrer</a>
                        {% endif %}

                        {% if app.user %}
                            <a href="{{ path('app_logout') }}">Se déconnecter - Bonjour {{ app.user.username }} !</a>
                        {% endif %}
                    </nav>
                {% endblock %}
            </div>
        </header>

        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div>
                        <div class="divMess">
                            <div class="messFlash">
                                {{ message }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
            {% block body2 %}{% endblock %}
            {% block body3 %}{% endblock %}
            {% block body4 %}{% endblock %}
            {% block body5 %}{% endblock %}
        </main>

        <footer>
            <p><em>© Bucket-List {{ "now" | date('Y') }}</em></p>
        </footer>
    </body>
</html>
